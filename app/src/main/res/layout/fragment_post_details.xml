<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fitsSystemWindows="true"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_back"
                android:src="@drawable/ic_arrow_right"
                android:paddingVertical="12dp"
                android:layout_centerVertical="true"
                android:paddingHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ic_share"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingVertical="12dp"
                android:paddingEnd="16dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ic_add"
                android:layout_centerVertical="true"
                android:paddingVertical="12dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_add"
                android:layout_toStartOf="@id/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ic_like"
                android:layout_centerVertical="true"
                android:paddingVertical="12dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_like_solid"
                android:layout_toStartOf="@id/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_details_post"
            android:layout_below="@id/toolbar"
            android:layout_above="@id/add_comment_container"
            android:paddingBottom="12dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recycler_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/add_comment_container"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_user_avatar"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                tools:src="@tools:sample/avatars"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/edt_comment"
                android:layout_toEndOf="@id/img_user_avatar"
                android:layout_toStartOf="@id/btn_post_comment"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/add_a_comment"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:paddingVertical="8dp"
                android:layout_marginStart="14dp"
                android:textColorHint="@color/text_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btn_post_comment"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_rounded_gradient"
                android:text="@string/post"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/loading_container"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/black_80"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading_animation"
                app:lottie_rawRes="@raw/uploading"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>

    </RelativeLayout>
</layout>
