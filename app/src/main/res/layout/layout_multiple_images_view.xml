<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="imagesCount"
            type="int" />

    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_margin="1dp"
            tools:src="@tools:sample/avatars"
            android:src="@color/white"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image2"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image3"
                android:layout_margin="1dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image4"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/ln_three_images"
            tools:src="@tools:sample/avatars"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ln_three_images"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image5"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/image6"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_four_images_top"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/image7"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image8"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ln_four_images_top"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/image9"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image10"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_five_images_top"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image11"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image12"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ln_five_images_top"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/image13"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image14"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image15"
                    android:layout_margin="1dp"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/remain_images_count"
                    android:background="@color/black_50"
                    tools:text="+5"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
